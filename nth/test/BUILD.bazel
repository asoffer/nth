        "//nth/debug/log",
        "//nth/debug/log:file_log_sink",
        "//nth/debug/log:sink",
        "//nth/debug/property",
        "//nth/format",
        "//nth/format:common",
        "//nth/io/writer",
        "//nth/io/writer:file",
        "//nth/test/internal:test",
        "@abseil-cpp//absl/strings",
        "@abseil-cpp//absl/synchronization",
    ],
)

cc_test(
    name = "test_test",
    srcs = ["test_test.cc"],
    deps = [
        ":test",
        "//nth/test/raw:test",
    ],
)
