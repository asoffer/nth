cc_library(
    name = "main",
    testonly = True,
    srcs = ["main.cc"],
    hdrs = ["test.h"],
    deps = [
        ":arguments",
        ":benchmark",
        ":benchmark_result",
        ":fakeable_function",
        ":fuzz",
        ":test",
        "//nth/base:indestructible",
